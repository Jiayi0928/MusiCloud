<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <style name="gothicTextStyle">
        <item name="android:fontFamily">@font/gothic_a1</item>
    </style>

    <style name="postScreenTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="postScreenSubtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="postScreenContent">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="outlinedIconButton">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>