<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.neu.madcourse.musicloud">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApp">
        <activity android:name=".HomeScreenActivity"
            android:exported="false"/>
        <activity
            android:name="edu.neu.madcourse.musicloud.PostActivity"
            android:exported="false" />
        <activity
            android:name="edu.neu.madcourse.musicloud.SearchResults"
            android:exported="false" />
        <activity
            android:name="edu.neu.madcourse.musicloud.LoginActivity"
            android:exported="false" />
        <activity
            android:name="edu.neu.madcourse.musicloud.SignupActivity"
            android:exported="false" />
        <activity
            android:name="edu.neu.madcourse.musicloud.Home"
            android:exported="false" />
        <activity
            android:name="edu.neu.madcourse.musicloud.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>